@model IEnumerable<Capstone.Domain.Entities.BvLocation>

@{
    ViewBag.Title = "AdminLocIndex";
}

<h2>AdminLocIndex</h2>

<table>
    <tr>
        <th>Store Number</th>
        <th>Address</th>
        <th>City</th>
        <th>Zip</th>
        <th>Phone</th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>@Html.ActionLink(item.BvStoreNum, "EditLoc", "AdminLoc", new { item.BvLocationId }, null)</td>
        <td>@Html.DisplayFor(modelItem => item.Address)</td>
        <td>@Html.DisplayFor(modelItem => item.City)</td>
        <td>@Html.DisplayFor(modelItem => item.Zip)</td>
        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
        <td>
            @using (Html.BeginForm("DeleteLoc", "AdminLoc", new { item.BvLocationId }))
            {
               <input type ="submit" value ="Delete" />
            }
        </td>
    </tr>
}
</table>
<p>@Html.ActionLink("Add a new restaurant", "CreateLoc")</p>


