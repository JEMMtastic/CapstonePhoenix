@model IEnumerable<Capstone.Domain.Entities.PartnershipNight>
@using System.Web.Mvc.Html

@{
    ViewBag.Title = "Partnership Nights";
}

<h2>All Partnership Nights</h2>
<table>
    <tr>
        <th>Date</th>
        <th>Store #</th>
        <th>Charity</th>
        <th>Chk Req Id</th>
        <th>Comments</th>
        <th>Chk Req Finished</th>
        <th>Pre-Event Form</th>
        <th>Post-Event Form</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.ActionLink(item.Date.ToShortDateString(), "Edit", new { item.PartnershipNightId })</td>
        <td>@item.BVLocation.BvStoreNum</td>
        <td>@item.Charity.Name</td>
        <td>@item.CheckRequestId <!-- Html.DisplayFor(modelItem => item.CheckRequestId)--></td>
        <td>@item.Comments <!--Html.DisplayFor(modelItem => item.Comments)--></td>
        <td>@item.CheckRequestFinished <!--Html.DisplayFor(modelItem => item.CheckRequestFinished)--></td>
        <td>@item.BeforeTheEventFinished <!--Html.DisplayFor(modelItem => item.BeforeTheEventFinished)--></td>
        <td>@item.AfterTheEventFinished <!--Html.DisplayFor(modelItem => item.AfterTheEventFinished)--></td>
        <td>@using(Html.BeginForm("Delete", "AdminPartnershipNight")){
                @Html.Hidden("PartnershipNightId", item.PartnershipNightId)
             <input type="submit" value="Delete" />
         }
            <!--Html.ActionLink("Edit", "Edit", new { id=item.PartnershipNightId }) |
            Html.ActionLink("Details", "Details", new { id=item.PartnershipNightId }) |
            Html.ActionLink("Delete", "Delete", new { id=item.PartnershipNightId }) -->
        </td>
    </tr>
}
</table>
<p>@Html.ActionLink("Add a new Partnership Night", "Create")</p>
